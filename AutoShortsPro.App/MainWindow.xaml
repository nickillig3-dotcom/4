<Window x:Class="AutoShortsPro.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GDPR Blur Pro" Height="600" Width="920"
        AllowDrop="True" Drop="MainWindow_Drop">
  <DockPanel LastChildFill="True">
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="_Lizenz">
        <MenuItem Header="_Lizenz laden..." Click="LoadLicense_Click"/>
        <MenuItem Header="_Pro kaufen" Click="BuyPro_Click"/>
      </MenuItem>
      <MenuItem Header="_Hilfe">
        <MenuItem Header="_Über..." Click="About_Click"/>
      </MenuItem>
    </Menu>
    <Grid Margin="16">
      <StackPanel>
        <TextBlock Text="Dateien hierher ziehen oder &quot;Dateien auswählen…&quot; klicken" FontSize="18" Margin="0,0,0,12"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
          <TextBlock Text="Blur:" VerticalAlignment="Center"/>
          <Slider x:Name="BlurSlider" Minimum="11" Maximum="71" Value="35" Width="240" Margin="8,0,0,0"/>
          <CheckBox x:Name="PixelateCheck" Content="Pixelate statt Blur" Margin="16,0,0,0"/>
          <CheckBox x:Name="DnnFaceCheck" Content="Besseres Gesicht (DNN)" Margin="16,0,0,0"/>
          <CheckBox x:Name="ReviewImagesCheck" Content="Manuell prüfen (Bilder)" Margin="16,0,0,0"/>
        </StackPanel>

        <!-- NEU: Ausgabeordner -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
          <TextBlock Text="Ausgabeordner:" VerticalAlignment="Center" Width="110"/>
          <TextBox x:Name="OutDirBox" Width="520" Margin="8,0,0,0" ToolTip="Leer lassen = Ausgabedatei neben Eingabedatei"/>
          <Button Content="Durchsuchen…" Width="120" Margin="8,0,0,0" Click="BrowseOutDir_Click"/>
          <Button Content="Leeren" Width="80" Margin="8,0,0,0" Click="ClearOutDir_Click" ToolTip="Leeren = gleicher Ordner wie Eingabe"/>
        </StackPanel>

        <Button x:Name="PickFilesBtn" Content="Dateien auswählen…" Width="180" Click="PickFiles_Click"/>
        <ProgressBar x:Name="Progress" Height="16" Minimum="0" Maximum="100" Margin="0,12,0,0"/>
        <TextBlock x:Name="StatusText" Margin="0,6,0,0" />
      </StackPanel>
    </Grid>
  </DockPanel>
</Window>
