<Window x:Class="AutoShortsPro.App.Views.ImageReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prüfen &amp; Korrigieren (Bild)" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8">
      <TextBlock Text="Links ziehen: neue Box  •  Rechtsklick: Box löschen" VerticalAlignment="Center"/>
      <TextBlock Text="   " Width="16"/>
      <Button Content="Übernehmen" Click="Accept_Click" Width="110" Margin="0,0,6,0"/>
      <Button Content="Abbrechen" Click="Cancel_Click" Width="90"/>
      <TextBlock Text="   " Width="16"/>
      <TextBlock x:Name="CountText" VerticalAlignment="Center"/>
    </StackPanel>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="#111">
      <Grid>
        <Image x:Name="Img" Stretch="None"/>
        <Canvas x:Name="Overlay" Background="Transparent"
                MouseLeftButtonDown="Overlay_MouseLeftButtonDown"
                MouseMove="Overlay_MouseMove"
                MouseLeftButtonUp="Overlay_MouseLeftButtonUp"
                MouseRightButtonDown="Overlay_MouseRightButtonDown"/>
      </Grid>
    </ScrollViewer>
  </DockPanel>
</Window>
